@model ToDoApp_NisaNurYagiz.Models.SearchViewModel

@{
    ViewData["Title"] = "Index";

}


<h1>Index</h1>

<p>
    <a asp-action="Create">Add new category</a>
</p>



<form asp-action="Index" asp-controller="Categories" >
    <div class="form-group">
        <label>Search Text</label>
        <input asp-for="SearchText" class="form-control" />
   
        <label>Search in description</label>
        <input asp-for="SearchInDesc" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CatResult)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
    </tbody>
</table>
